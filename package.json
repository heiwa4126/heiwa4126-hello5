{
	"name": "@heiwa4126/hello5",
	"version": "0.0.1",
	"description": "TypeScript hello world library with dual ES modules/CommonJS support. Features GitHub Actions trusted publishing to npmjs with Sigstore attestation.",
	"type": "module",
	"main": "./dist/hello.cjs",
	"module": "./dist/hello.js",
	"types": "./dist/hello.d.ts",
	"exports": {
		".": {
			"types": "./dist/hello.d.ts",
			"import": "./dist/hello.js",
			"require": "./dist/hello.cjs"
		}
	},
	"bin": {
		"heiwa4126-hello5": "dist/main.js"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"!dist/**/*.map"
	],
	"scripts": {
		"build": "tsup",
		"build0": "tsup && chmod +x dist/main.js",
		"test:watch": "vitest",
		"test": "vitest run",
		"test:run": "vitest run",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build && npm run test:run",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:full": "npm pkg fix && biome format --write . && dprint fmt && textlint --fix \"**/*.md\"",
		"smoke-test": "node examples/ex1.mjs && node examples/ex2.cjs && ts-node examples/ex3.ts",
		"prepack": "cp package.json package.json.bak && node scripts/clean-pkg.mjs",
		"postpack": "mv package.json.bak package.json"
	},
	"keywords": [
		"aws cdk",
		"utilities",
		"cli",
		"typescript",
		"esm",
		"sigstore",
		"trusted-publishing",
		"github-actions"
	],
	"author": "heiwa4126 <heiwa4126@gmail.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/heiwa4126-hello5.git"
	},
	"license": "MIT",
	"devDependencies": {
		"@heiwa4126/hello5": "file:.",
		"@biomejs/biome": "^2.2.6",
		"@types/node": "^24.8.1",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
