{
	"name": "@heiwa4126/hello4",
	"version": "0.0.8",
	"description": "TypeScript hello world library with dual ES modules/CommonJS support",
	"type": "module",
	"main": "./dist/cjs/hello.cjs",
	"module": "./dist/esm/hello.js",
	"types": "./dist/esm/hello.d.ts",
	"exports": {
		".": {
			"types": "./dist/esm/hello.d.ts",
			"import": "./dist/esm/hello.js",
			"require": "./dist/cjs/hello.cjs"
		}
	},
	"bin": {
		"heiwa4126-hello4": "dist/esm/main.js"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"!dist/**/*.map"
	],
	"scripts": {
		"build": "npm run build:esm && npm run build:cjs && npm run rename-cjs && npm run set-permissions",
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"rename-cjs": "find dist/cjs -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\;",
		"set-permissions": "chmod +x dist/esm/main.js",
		"test:watch": "vitest",
		"test": "vitest run",
		"test:run": "vitest run",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build && npm run test:run",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:full": "biome format --write . && dprint fmt && textlint --fix \"**/*.md\""
	},
	"keywords": [
		"hello-world",
		"example",
		"demo",
		"typescript",
		"esm",
		"commonjs",
		"cli"
	],
	"author": "heiwa4126 <heiwa4126@gmail.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/heiwa4126-hello4.git"
	},
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/node": "^20.0.0",
		"typescript": "^5.0.0",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
